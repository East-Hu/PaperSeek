{
  "name": "paper-to-action",
  "displayName": "Paper-to-Action",
  "description": "Automated paper crawling and AI summarization tool for researchers | 自动化论文爬取与智能摘要工具",
  "version": "0.1.0",
  "publisher": "east-hu",
  "repository": {
    "type": "git",
    "url": "https://github.com/East-Hu/paper-to-action.git"
  },
  "bugs": {
    "url": "https://github.com/East-Hu/paper-to-action/issues"
  },
  "homepage": "https://github.com/East-Hu/paper-to-action#readme",
  "license": "MIT",
  "keywords": [
    "arxiv",
    "paper",
    "research",
    "AI",
    "LLM",
    "summary",
    "academic",
    "search",
    "papers"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "paper-robot",
          "title": "Paper Robot",
          "icon": "resources/robot.svg"
        }
      ]
    },
    "views": {
      "paper-robot": [
        {
          "id": "paperRobotView",
          "name": "Paper Search"
        }
      ]
    },
    "commands": [
      {
        "command": "paperRobot.search",
        "title": "Paper Robot: Search Papers"
      },
      {
        "command": "paperRobot.config",
        "title": "Paper Robot: Configure API"
      },
      {
        "command": "paperRobot.openPanel",
        "title": "Paper Robot: Open Panel"
      }
    ],
    "configuration": {
      "title": "Paper Robot",
      "properties": {
        "paperRobot.apiKey": {
          "type": "string",
          "default": "",
          "description": "LLM API Key",
          "scope": "application"
        },
        "paperRobot.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "API Base URL",
          "scope": "application"
        },
        "paperRobot.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model name to use",
          "scope": "application"
        },
        "paperRobot.maxResults": {
          "type": "number",
          "default": 20,
          "description": "Maximum search results",
          "scope": "application"
        },
        "paperRobot.outputDir": {
          "type": "string",
          "default": "papers",
          "description": "Output directory for papers",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.1.0"
  },
  "dependencies": {}
}
